generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  photoUrl  String?  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relação com PlayerMonster para deck
  playerMonsters PlayerMonster[]
}

model PlayerMonster {
  id        Int      @id @default(autoincrement())
  playerId  Int
  monsterId Int
  position  Int      // posição no deck (1 a 6)

  player    Player   @relation(fields: [playerId], references: [id])
  monster   Monster  @relation(fields: [monsterId], references: [id])

  @@unique([playerId, position]) // posição única por player
  @@unique([playerId, monsterId]) // não repetir monstro no deck
}


model Monster {
  id             Int      @id @default(autoincrement())
  name           String   @unique
  hp             Int
  attack         Int
  defense        Int
  speed          Int
  specialAbility String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  playerMonsters PlayerMonster[]
}

model Battle {
  id        Int      @id @default(autoincrement())
  player1Id Int
  player2Id Int
  winnerId  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([player1Id])
  @@index([player2Id])
  @@index([winnerId])
}
